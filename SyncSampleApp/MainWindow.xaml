<Window x:Class="SyncSampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyncSampleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Slider x:Name="parameter" Width="120" 
                    Minimum="1"  TickPlacement="Both"
                    IsSnapToTickEnabled="True"  Maximum="10"
                    ValueChanged="ChangingParameter"/>
            <Label x:Name="monitor" Content=""/>
        </StackPanel>
    </Grid>
</Window>
